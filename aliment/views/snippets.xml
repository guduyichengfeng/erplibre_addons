<odoo>

    <!-- Snippets -->
    <template id="s_aliment" name="Aliments">
        <section class="o_aliment">
            <div class="container">
                <form id="crÃ©er">
                    <label for="fname">Name: </label><br/>
                    <input type="text" name="name" id="name"/>
                    <button type="submit" id="submit-btn">Ajouter</button>
                </form>
                <h1>Liste des aliments</h1>
                <div class="aliment_value">Loading...</div>
                    <form id="modifier" class="form-group">
                        <div class="form-group">
                            <label for="name">ID:</label>
                            <input type="number" name="aliment_id" id="aliment_id" class="form-control" />
                            <label for="name">Nouveau nom d'aliment:</label>
                            <input type="text" name="name" id="new_name" class="form-control" />
                        </div>
                        <button type="submit" class="btn btn-primary">Modifier</button>
                    </form>
            </div>
        </section>
    </template>



    <!-- Add snippets to menu -->
    <template id="snippet_effect" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']/div[hasclass('o_panel_body')]" position="inside">
            <t
                t-snippet="aliment.s_aliment"
                t-thumbnail="/aliment/static/description/icon.png"
            />
        </xpath>
    </template>
    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/aliment/static/src/scss/aliment.scss"
            />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script
                type="text/javascript"
                src="/aliment/static/src/js/website.aliment.animation.js"
            />
        </xpath>
    </template>
</odoo>
